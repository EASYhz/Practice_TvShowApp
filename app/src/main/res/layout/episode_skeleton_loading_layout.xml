<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    >
                    <ImageView
                        android:id="@+id/episodeImageView"
                        android:layout_width="192dp"
                        android:layout_height="108dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/skeleton_image_shape"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:layout_margin="20dp">
                    <TextView
                        android:id="@+id/episodeTitleTextView"
                        android:text=" "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/skeletonTextGray">
                    </TextView>
                    <TextView
                        android:id="@+id/episodeTimeTextView"
                        android:text=" "
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:background="@color/skeletonTextGray"
                        android:layout_width="50dp"
                        android:layout_height="25dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/episodeSummaryTextView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_margin="8dp"
                android:background="@color/skeletonTextGray"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>